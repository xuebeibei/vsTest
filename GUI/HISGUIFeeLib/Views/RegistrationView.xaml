                    <ComboBox x:Name="PayWayCombo" Margin="5" Grid.Row="0" Grid.Column="1"></ComboBox>
                    
                    <Label Margin="5" Grid.Row="0" Grid.Column="2">折扣金额：</Label>
                    <TextBox x:Name="DiscountEdit" Margin="5" IsEnabled="False" Grid.Row="0" Grid.Column="3"></TextBox>
                    
