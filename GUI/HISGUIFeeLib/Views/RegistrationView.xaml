                    <Label Margin="5" Grid.Row="1" Grid.Column="6">实退金额：</Label>
                    <TextBox x:Name="RealReturnMoneyEdit" Margin="5" IsEnabled="False" Grid.Row="1" Grid.Column="7"></TextBox>
                </Grid>-->
            </Grid>
        </DockPanel>
    </Grid>
</HISGUICore:HISGUIViewBase>
