<HISGUICore:HISGUIViewBase x:Class="HISGUIFeeLib.Views.PrePaidView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HISGUIFeeLib.Views"
             xmlns:HISGUICore="clr-namespace:HISGUICore;assembly=HISGUICore"
             xmlns:Controls="clr-namespace:HISGUICore.MyContorls;assembly=HISGUICore">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Margin="5" Click="Button_Click">读卡</Button>
                <TextBox x:Name="FindName" Margin="5" Width="150"/>
                <Button Margin="5">查找</Button>
            </StackPanel>
            <Separator x:Name="Spe" Margin="5"/>
            <TextBlock x:Name="PatientMsg" Margin="5" Height="100" Background="AntiqueWhite"></TextBlock>
            <Separator x:Name="Spe1" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton Margin="5" IsChecked="True">缴费</RadioButton>
                <RadioButton Margin="5">退费</RadioButton>
                <TextBox Margin="5" Width="100"></TextBox>
                <Label Margin="5">元</Label>
                <Button Margin="5">缴费</Button>
                <Button Margin="5">退费</Button>
            </StackPanel>
            <Separator x:Name="Spe2" Margin="5"/>
            <ListView Name="AllPrePaidList" Margin="5"  SelectionMode="Single">
                <ListView.View>
                    <GridView x:Name="gridViewAllPrePaid">
                        <GridViewColumn Header="时间" DisplayMemberBinding="{Binding Path=ApplyTime}" Width="100"></GridViewColumn>
                        <GridViewColumn Header="类型" DisplayMemberBinding="{Binding Path=IllnesSstateEnum}" Width="80"></GridViewColumn>
                        <GridViewColumn Header="金额" DisplayMemberBinding="{Binding Path=Patient.Tel}" Width="100"></GridViewColumn>
                        <GridViewColumn Header="制单人" DisplayMemberBinding="{Binding Path=Patient.Tel}" Width="100"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</HISGUICore:HISGUIViewBase>
