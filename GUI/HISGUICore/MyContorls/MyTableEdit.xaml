<UserControl x:Class="HISGUICore.MyContorls.MyTableEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HISGUICore.MyContorls">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="MyDataGrid" Margin="5" AutoGenerateColumns="False" LoadingRow="MyDataGrid_LoadingRow" CanUserAddRows="False">
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="AddBtn" Margin="5" Width="20" Click="AddBtn_Click">+</Button>
                <Button x:Name="DeleteBtn" Margin="5" Width="20" Click="DeleteBtn_Click">-</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
