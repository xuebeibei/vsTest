<UserControl x:Class="HISGUITriageLib.Views.MyTextEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HISGUITriageLib.Views"
             >
    <Grid>
        <StackPanel  Margin="5">
            <Label x:Name="TittleName" Margin="2">标题：</Label>
            <TextBox x:Name="TextEdit" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="2">
            </TextBox>
            <Label x:Name="TextNum" HorizontalAlignment="Right">0/500</Label>
        </StackPanel>
    </Grid>
</UserControl>
