<UserControl x:Class="HISGUIClinicDoctorLib.Views.Report"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HISGUIClinicDoctorLib.Views">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListView x:Name="ListViewReport" Grid.Column="0" MinWidth="60" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="序号" DisplayMemberBinding="{Binding Id}" Width="30"></GridViewColumn>
                    <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Id}" Width="80"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Column="1" Margin="5">
            <Label x:Name="ReportNameLabel" HorizontalAlignment="Center">报告名称</Label>
            <Separator/>
            <TextBox></TextBox>
        </StackPanel>
        
    </Grid>
</UserControl>
