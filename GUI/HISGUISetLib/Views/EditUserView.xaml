<UserControl x:Class="HISGUISetLib.Views.EditUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HISGUISetLib.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Label Margin="5">名称*：</Label>
            <TextBox x:Name="NameEdit" Margin="5"/>
            <Label x:Name="PasswordLabel" Margin="5">密码：</Label>
            <PasswordBox x:Name="Password" Margin="5"/>
            <Label Margin="5">对应人员：</Label>
            <ComboBox x:Name="EmployeeCombo" Margin="5"/>
            <Label Margin="5">状态：</Label>
            <ComboBox x:Name="StatusCombo" Margin="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveBtn" Margin="5" Click="SaveBtn_Click">保存</Button>
                <Button x:Name="CancelBtn" Margin="5" Click="CancelBtn_Click">取消</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
