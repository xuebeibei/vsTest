<UserControl x:Class="HISGUISetLib.Views.EditSignalItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HISGUISetLib.Views">
    <Grid>
        <StackPanel>
            <Label Margin="5">名称*：</Label>
            <TextBox x:Name="NameEdit" Margin="5"></TextBox>
            <Label Margin="5">时间段：</Label>
            <ComboBox x:Name="SignalItemCombo" Margin="5"/>
            <Label Margin="5">最大挂号数量：</Label>
            <TextBox x:Name="MaxNum" Margin="5"></TextBox>
            <Label Margin="5">价格：</Label>
            <TextBox x:Name="SellPrice" Margin="5"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveBtn" Margin="5" Click="SaveBtn_Click">保存</Button>
                <Button x:Name="CancelBtn" Margin="5" Click="CancelBtn_Click">取消</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
